    <script>
        const audioContext = new (window.AudioContext || window.webkitAudioContext)();
        
        function playDanceMusic() {
            const now = audioContext.currentTime;
            const duration = 2;
            
            // Bass kick
            const kick = audioContext.createOscillator();
            const kickGain = audioContext.createGain();
            kick.connect(kickGain);
            kickGain.connect(audioContext.destination);
            kick.frequency.setValueAtTime(150, now);
            kick.frequency.exponentialRampToValueAtTime(50, now + 0.1);
            kickGain.gain.setValueAtTime(0.3, now);
            kickGain.gain.exponentialRampToValueAtTime(0.01, now + 0.3);
            kick.start(now);
            kick.stop(now + 0.3);
            
            // Hi-hat pattern
            for (let i = 0; i < 8; i++) {
                const hihat = audioContext.createOscillator();
                const hihatGain = audioContext.createGain();
                hihat.type = 'square';
                hihat.connect(hihatGain);
                hihatGain.connect(audioContext.destination);
                hihat.frequency.setValueAtTime(8000, now + i * 0.25);
                hihatGain.gain.setValueAtTime(0.05, now + i * 0.25);
                hihatGain.gain.exponentialRampToValueAtTime(0.01, now + i * 0.25 + 0.1);
                hihat.start(now + i * 0.25);
                hihat.stop(now + i * 0.25 + 0.1);
            }
            
            // Synth melody
            const melody = [400, 500, 600, 800];
            melody.forEach((freq, i) => {
                const synth = audioContext.createOscillator();
                const synthGain = audioContext.createGain();
                synth.type = 'sawtooth';
                synth.connect(synthGain);
                synthGain.connect(audioContext.destination);
                synth.frequency.setValueAtTime(freq, now + i * 0.5);
                synthGain.gain.setValueAtTime(0.1, now + i * 0.5);
                synthGain.gain.exponentialRampToValueAtTime(0.01, now + i * 0.5 + 0.4);
                synth.start(now + i * 0.5);
                synth.stop(now + i * 0.5 + 0.4);
            });
        }
        
        function playPartyExplosion() {
            const now = audioContext.currentTime;
            
            // Explosion buildup
            const buildup = audioContext.createOscillator();
            const buildupGain = audioContext.createGain();
            buildup.type = 'sawtooth';
            buildup.connect(buildupGain);
            buildupGain.connect(audioContext.destination);
            buildup.frequency.setValueAtTime(50, now);
            buildup.frequency.exponentialRampToValueAtTime(2000, now + 0.3);
            buildupGain.gain.setValueAtTime(0.2, now);
            buildupGain.gain.exponentialRampToValueAtTime(0.01, now + 0.5);
            buildup.start(now);
            buildup.stop(now + 0.5);
            
            // Pop sounds
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    const pop = audioContext.createOscillator();
                    const popGain = audioContext.createGain();
                    pop.type = 'sine';
                    pop.connect(popGain);
                    popGain.connect(audioContext.destination);
                    const freq = 800 + Math.random() * 400;
                    pop.frequency.setValueAtTime(freq, audioContext.currentTime);
                    popGain.gain.setValueAtTime(0.15, audioContext.currentTime);
                    popGain.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.2);
                    pop.start(audioContext.currentTime);
                    pop.stop(audioContext.currentTime + 0.2);
                }, i * 100);
            }
        }
        
        function triggerRadicalCelebration() {
            // Visual effects
            const explosion = document.getElementById('party-explosion');
            const badge = document.getElementById('radical-badge');
            
            explosion.classList.add('active');
            badge.classList.add('show');
            
            // Audio effects
            playPartyExplosion();
            setTimeout(() => playDanceMusic(), 300);
            
            // Clean up
            setTimeout(() => {
                explosion.classList.remove('active');
                badge.classList.remove('show');
            }, 1000);
        }
        
        function playSound(type) {
            const now = audioContext.currentTime;
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            switch(type) {
                case 'hover':
                    oscillator.type = 'square';
                    oscillator.frequency.setValueAtTime(800, now);
                    gainNode.gain.setValueAtTime(0.05, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.05);
                    oscillator.start(now);
                    oscillator.stop(now + 0.05);
                    break;
                    
                case 'click':
                    oscillator.type = 'triangle';
                    oscillator.frequency.setValueAtTime(600, now);
                    oscillator.frequency.exponentialRampToValueAtTime(400, now + 0.1);
                    gainNode.gain.setValueAtTime(0.15, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.1);
                    oscillator.start(now);
                    oscillator.stop(now + 0.1);
                    break;
                    
                case 'warning':
                    oscillator.type = 'sawtooth';
                    oscillator.frequency.setValueAtTime(400, now);
                    oscillator.frequency.exponentialRampToValueAtTime(200, now + 0.3);
                    gainNode.gain.setValueAtTime(0.1, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.3);
                    oscillator.start(now);
                    oscillator.stop(now + 0.3);
                    break;
                    
                case 'success':
                    oscillator.type = 'sine';
                    oscillator.frequency.setValueAtTime(400, now);
                    oscillator.frequency.exponentialRampToValueAtTime(550, now + 0.15);
                    oscillator.frequency.setValueAtTime(500, now + 0.15);
                    gainNode.gain.setValueAtTime(0.1, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.25);
                    oscillator.start(now);
                    oscillator.stop(now + 0.25);
                    break;
                    
                case 'neutral':
                    oscillator.type = 'square';
                    oscillator.frequency.setValueAtTime(450, now);
                    gainNode.gain.setValueAtTime(0.08, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.2);
                    oscillator.start(now);
                    oscillator.stop(now + 0.2);
                    break;
                    
                case 'next':
                    oscillator.type = 'triangle';
                    oscillator.frequency.setValueAtTime(500, now);
                    oscillator.frequency.setValueAtTime(550, now + 0.05);
                    gainNode.gain.setValueAtTime(0.12, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.15);
                    oscillator.start(now);
                    oscillator.stop(now + 0.15);
                    break;
                    
                case 'complete':
                    oscillator.type = 'sine';
                    oscillator.frequency.setValueAtTime(300, now);
                    oscillator.frequency.exponentialRampToValueAtTime(400, now + 0.2);
                    oscillator.frequency.setValueAtTime(380, now + 0.3);
                    oscillator.frequency.exponentialRampToValueAtTime(350, now + 0.6);
                    gainNode.gain.setValueAtTime(0.1, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.6);
                    oscillator.start(now);
                    oscillator.stop(now + 0.6);
                    break;
            }
        }
        
